<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_below="@+id/User_sign_name"/>
    <TextView
        android:id="@+id/user_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号"
        android:textColor="#000000"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_above="@+id/view1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/User_sign_password"
        android:layout_marginTop="2px"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/User_sign_name"
        android:hint="@string/user_name"
        android:layout_toRightOf="@+id/user_name_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="2px"
        android:selectAllOnFocus="true"/>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_below="@+id/User_sign_name"/>

    <TextView
        android:id="@+id/user_password_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码"
        android:textColor="#000000"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view1"
        android:layout_alignBottom="@+id/User_sign_password" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/User_sign_password"
        android:hint="@string/user_password"
        android:layout_toRightOf="@+id/user_password_view"
        android:layout_below="@+id/view1"
        android:layout_alignParentEnd="true"
        android:selectAllOnFocus="true"/>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_below="@+id/User_sign_password"/>


    <TextView
        android:id="@+id/user_password_confirm_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认密码"
        android:textColor="#000000"
        android:textSize="16dp"
        android:gravity="center"
        android:layout_below="@+id/user_password_view"
        android:layout_alignParentStart="true"/>


    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000" />


    <Button
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/User_sign"
        android:background="@color/colorBlue"
        android:layout_below="@+id/view2"
        android:layout_alignParentStart="true" />
</RelativeLayout>