<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/User_login_name"
        android:id="@+id/User_login_password"
        android:hint="@string/user_password"
        android:layout_toEndOf="@+id/User_login_name_view" />

    <Button
        android:text="登录"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/User_login_password"
        android:id="@+id/User_login"
        android:layout_alignParentStart="true"
        android:background="@color/colorBlue"/>

    <TextView
        android:text="还没有账号？"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="87dp"
        android:layout_marginBottom="35dp"
        android:id="@+id/textView" />

    <Button
        android:text="立即注册>"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/User_sign_activity_turn"
        android:background="@color/colorWhite"
        android:textColor="@color/colorBlue"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <ImageView
        android:id="@+id/User_login_name_view"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/user_name"
        android:layout_alignTop="@+id/User_login_name"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/User_login_password" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/User_login_name"
        android:layout_marginTop="157dp"
        android:hint="@string/user_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/User_login_name_view"
        android:layout_toRightOf="@+id/User_login_password_view"
        android:layout_below="@+id/view"/>

    <ImageView
        android:id="@+id/User_login_password_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_password"
        android:layout_below="@+id/User_login_name_view"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/User_login_password"
        android:layout_above="@+id/User_login"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="157dp" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        android:layout_above="@+id/User_login_password"
        android:layout_alignParentStart="true" />
</RelativeLayout>